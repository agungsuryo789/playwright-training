# Environment Configuration for Playwright Tests

# Base URL for different environments
STAGING_BASE_URL=https://staging.your-app.com
PRODUCTION_BASE_URL=https://your-app.com
LOCAL_BASE_URL=http://localhost:3000

# API endpoints
API_BASE_URL=https://api.your-app.com
STAGING_API_BASE_URL=https://staging-api.your-app.com
LOCAL_API_BASE_URL=http://localhost:8000

# Test user credentials (use secrets in production)
TEST_USERNAME=testuser@example.com
TEST_PASSWORD=testpassword123

# Database connection (for test setup/teardown)
TEST_DB_URL=postgresql://testuser:testpass@localhost:5432/testdb

# Feature flags
ENABLE_CRUD_TESTS=true
ENABLE_API_TESTS=true
ENABLE_PERFORMANCE_TESTS=false

# Test timeouts (in milliseconds)
DEFAULT_TIMEOUT=30000
API_TIMEOUT=10000
PAGE_LOAD_TIMEOUT=30000

# Screenshot and video settings
CAPTURE_SCREENSHOTS=failure
CAPTURE_VIDEO=retain-on-failure

# Parallel test settings
MAX_WORKERS=4
RETRY_COUNT=2
